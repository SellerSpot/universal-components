{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "ES5",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "baseUrl": "src",
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist"
    },
    "include": ["src"],
    "exclude": ["**/*.stories.tsx"]
}